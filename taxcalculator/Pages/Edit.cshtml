@page
@model taxcalculator.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Calc</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Calc.TypeId" class="control-label"></label>
                <select asp-for="Calc.TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
                <span asp-validation-for="Calc.TypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calc.InValue" class="control-label"></label>
                <input asp-for="Calc.InValue" class="form-control" />
                <span asp-validation-for="Calc.InValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calc.OutValue" class="control-label"></label>
                <input asp-for="Calc.OutValue" class="form-control" />
                <span asp-validation-for="Calc.OutValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Calc.calculatedAt" class="control-label"></label>
                <input asp-for="Calc.calculatedAt" class="form-control" />
                <span asp-validation-for="Calc.calculatedAt" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Calc.ID" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
